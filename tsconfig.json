{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2017",
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "./dist/",
    "forceConsistentCasingInFileNames": true,
    "lib": [
        "es2015",
        "dom"
    ],
    "types": [
      "node",
      "openfin",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}