<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OpenFin.Notifications.Demo">
    
    <SolidColorBrush x:Key="mainBgColor" Color="#1F1E24" />
    <SolidColorBrush x:Key="textBlockBorderBrush" Color="#666" />

    <Style x:Key="defaultWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource mainBgColor}" />
        <Setter Property="Padding" Value="10, 25, 25, 0" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource mainBgColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="130" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Padding" Value="3" />
    </Style>

    <Style x:Key="textBlockBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="1px" />
        <Setter Property="BorderBrush" Value="{StaticResource textBlockBorderBrush}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="MinHeight" Value="140px" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="5px" />
    </Style>

</ResourceDictionary>